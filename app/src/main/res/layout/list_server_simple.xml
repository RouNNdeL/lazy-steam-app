<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="?android:selectableItemBackground"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/server_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:contentDescription="server hostname"
        android:textAppearance="@style/TextAppearance.ListPrimary"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/server_icon_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/server_icon_bg"
        app:layout_constraintVertical_chainStyle="spread_inside"
        tools:text="TZC-Laptop"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/server_icon_bg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="?android:textColorTertiary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:riv_oval="true"/>

    <ImageView
        android:id="@+id/server_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:tint="?android:textColorPrimaryInverse"
        app:layout_constraintBottom_toBottomOf="@+id/server_icon_bg"
        app:layout_constraintLeft_toLeftOf="@+id/server_icon_bg"
        app:layout_constraintRight_toRightOf="@+id/server_icon_bg"
        app:layout_constraintTop_toTopOf="@+id/server_icon_bg"
        tools:src="@drawable/ic_desktop_mac_black_24dp"/>

    <TextView
        android:id="@+id/server_host"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:contentDescription="server host"
        android:textAppearance="@style/TextAppearance.ListSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/server_icon_bg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/server_name"
        app:layout_constraintRight_toRightOf="@+id/server_name"
        tools:text="123.123.123.123:1234"/>


</android.support.constraint.ConstraintLayout>